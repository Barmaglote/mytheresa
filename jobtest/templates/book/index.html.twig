{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-10">
            <h1>Books</h1>
        </div>
        <div class="col-2 text-center">
            <a class="btn btn-primary" href="{{ path('book_new') }}"><i class="bi bi-plus-circle mx-1"></i>Create new</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Cover</th>
                <th>Author</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.Title }}</td>
                <td>{{ book.Cover }}</td>
                <td>{{ book.Author }}</td>
                <td>{{ book.Status ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(books) }}
    </div>
    
{% endblock %}
